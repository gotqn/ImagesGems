<h1>Users</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Login</th>
    <th>Email</th>
    <th>Is Admin</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= image_tag avatar_url(user) %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin? ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-mini' %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New', new_user_path, :class => 'btn btn-primary' %>


