<div class='panel panel-primary'>
  <div class='panel-heading'>
    <h3 class='panel-title'><%= @demo_gem.name %></h3>
  </div>
  <div class='panel-body'>
    <%= @demo_gem.description %>
    <div class='panel-gem'>
        <%= eval(@demo_gem.code).html_safe %>
    </div>
    <div style='display: inline-block'>
      <strong>Created on:</strong>
      <%= @demo_gem.created_at.to_date %>
      <br />
      <strong>Last modified on:</strong>
      <%= @demo_gem.updated_at.to_date %>
    </div>
  </div>
  <div class='panel-footer'>
    <%= link_to(@demo_gem.github, title: 'GitHub') do %>
        <%= image_tag('GitHub.png', width: '25', height: '25',alt: 'Show in GitHub') %>
    <% end %>
    <%= link_to(@demo_gem.rubygems, title: 'RubyGems') do %>
        <%= image_tag('RubyGems.png', width: '25', height: '25',alt: 'Show in RubyGems') %>
    <% end %>
  </div>
</div>

<% if can? :manage, DemoGem %>
    <%= link_to edit_demo_gem_path(@demo_gem), class: 'btn btn-warning' do %>
        <i class='icon-pencil'></i> Edit
    <% end %>
<% end %>
<% if can? :read, DemoGem %>
    <%= link_to demo_gems_path, class: 'btn btn-default btn-primary' do %>
        <i class='icon-left-big'></i> Back
    <% end %>
<% end %>
